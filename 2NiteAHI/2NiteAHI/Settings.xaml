<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:map="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps" xmlns:maps="clr-namespace:Xamarin.Essentials;assembly=Xamarin.Essentials"
             x:Class="_2NiteAHI.Settings">






    <Grid RowSpacing="0" ColumnSpacing="0">


        <Grid.Background>
            <LinearGradientBrush StartPoint="1,1" EndPoint="0,0">
                <!--<GradientStop Color="Aquamarine" Offset="0.0"/>-->
                <GradientStop Color="CadetBlue" Offset="0.0"/>
                <GradientStop Color="Cyan" Offset="0.5"/>
                <GradientStop Color="DarkBlue" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>

       
            <Grid.RowDefinitions>
             <!--User Settings-->
            <RowDefinition Height="2*"/> <!--GPS LOCATION-->
            <RowDefinition Height="2*"/> <!--NightTheme-->
            <RowDefinition Height="3*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
           
            <!--Switches-->
            <RowDefinition Height="11*"/> 
            <RowDefinition Height="10*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
          
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!--USER SETTINGS-->
        <Label Text="User Settings" TextColor="DarkGoldenrod"  Grid.Row="0" Grid.Column="0" FontSize="Medium"/>
        
        <!--GPS LOCATION--> <!--Location Services-->
        <Switch x:Name="GPSLOC" IsToggled="False" Grid.Row="1" Grid.Column="1" Toggled="GPSLOC_Toggled" />
        <Label Text="GPS Location" Grid.Row="1" Grid.Column="0" TextColor="White"  HorizontalOptions="Start" VerticalOptions="Center" Padding="20,0,30,0" FontSize="Medium"/>
        <!--NIGHTTIME THEME-->
        <Switch x:Name="NightTheme" IsToggled="False" Grid.Row="2" Grid.Column="1" VerticalOptions="Center" Toggled="NightTheme_Toggled" />
        <Label Text="Night Theme" Grid.Row="2" Grid.Column="0" TextColor="White"  VerticalOptions="Center" Padding="20,1,30,0" FontSize="Medium"/>
        
        <!--Personal Information-->
        <Label Text="Personal Information" Grid.Row="3" Grid.Column="0" TextColor="DarkGoldenrod" FontSize="Medium"/>
        <!--USERNAME-->
        <Label Text="USERNAME: " Grid.Row="4" Grid.Column="0" FontSize="Medium"/>
        <Label Text="EMAIL: " Grid.Row="5" Grid.Column="0" FontSize="Medium"/>
        















    </Grid>
    
    
  
    
    
</ContentPage>