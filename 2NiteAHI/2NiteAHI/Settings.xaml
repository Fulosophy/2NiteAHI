<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:map="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps" xmlns:maps="clr-namespace:Xamarin.Essentials;assembly=Xamarin.Essentials"
             x:Class="_2NiteAHI.Settings"
             Title="Settings">
    
    <ContentPage.ToolbarItems>
        <ToolbarItem
            IconImageSource="fire"/>
    </ContentPage.ToolbarItems>
    
    <Grid RowSpacing="0" ColumnSpacing="0">
        <Grid.Background>
            <LinearGradientBrush StartPoint="1,0" EndPoint="0,1">
                <!--<GradientStop Color="Aquamarine" Offset="0.0"/>-->
                <GradientStop Color="{AppThemeBinding Dark=CadetBlue, Light=White}" Offset="0.2"/>
                <GradientStop Color="{AppThemeBinding Dark=Cyan, Light=Violet}" Offset="0.5"/>
                <GradientStop Color="{AppThemeBinding Dark=DarkBlue, Light=White}" Offset="0.70"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <StackLayout
            Padding="50,10,50,0">
        <!--USER-->
            <Label
                Text="USER INFO"
                TextColor="Black"
                FontSize="Large"
                FontAttributes="Bold"
                TextDecorations="Underline"
                HorizontalOptions="CenterAndExpand"/>
            
            <!--USER EMAIL-->
            <Label
                Text="Email"
                TextColor="Black"
                FontSize="Medium"
                Padding="0,10,0,0"/>
            <Label
                Text="{Binding _Email}"
                TextColor="Black"
                FontSize="Medium"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                BackgroundColor="Gainsboro"/>
            
            <!--USER USERNAME-->
            <Label
                Text="Username"
                TextColor="Black"
                FontSize="Medium"
                Padding="0,10,0,0"/>
            <Label
                Text="{Binding _Username}"
                TextColor="Black"
                FontSize="Medium"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                BackgroundColor="Gainsboro"/>

            <!--USER PHONE NUMBER-->
            <Label
                Text="Phone Number"
                TextColor="Black"
                FontSize="Medium"
                Padding="0,10,0,0"/>
            <Label    
                Text="{Binding _PhoneNumber}"
                TextColor="Black"
                FontSize="Medium"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold"
                BackgroundColor="Gainsboro"/>

            <!--THEME-->
            <Label
                Text="OPTIONS"
                TextColor="Black"
                HorizontalOptions="CenterAndExpand"
                Padding="0,20,0,0"
                FontSize="Title"
                FontAttributes="Bold"
                TextDecorations="Underline"/>
            <Label
                Text="Day/Night Theme"
                TextColor="{AppThemeBinding Dark=White, Light=Black}"
                FontSize="Medium"
                Padding="0,10,0,0"/>
            <Switch
                x:Name="ThemeSwitch"
                IsToggled="{Binding NightTheme}"
                Toggled="NightTheme_Toggled"/>

        </StackLayout>
    </Grid>
</ContentPage>
